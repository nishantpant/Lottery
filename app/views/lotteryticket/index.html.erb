<div style="padding: 20px 80px;">
  <h1>Lottery Tickets</h1>

  <%
    #11 - 35 - 38 - 41 - 52 MegaBall 40 Megaplier 4 
    winnerStr = @rss.to_s
    winnerStr = winnerStr.gsub("Megaplier" , "-")
    winnerStr = winnerStr.gsub("MegaBall" , "-")
    arr = winnerStr.split(' - ')
  %>
  <div class="field">
    <table id="items" border="0">
      <tr>
        <th>Num 1
        <th>Num 2
        <th>Num 3
        <th>Num 4
        <th>Num 5
        <th>MegaPlier
        <th>Winner ?
      </tr>
      <% for ticket in @lotterytickets %>
      <tr>
        <td><%= 
              if(ticket.num1 == arr[0])
                "<font color='green'>#{ticket.num1}</font>"
              else
                ticket.num1
              end
            %>
        <td><%= 
              if(ticket.num2 == arr[1])
                'hahaha'
              else
                ticket.num2
              end
            %>
        <td><%= 
              if(ticket.num3 == arr[2])
                'hahaha'
              else
                ticket.num3
              end
            %>
        <td><%= 
              if(ticket.num4 == arr[3])
                'hahaha'
              else
                ticket.num4
              end
            %>
        <td><%= 
              if(ticket.num5 == arr[4])
                'hahaha'
              else
                ticket.num5
              end
            %>
        <td><%= 
              if(ticket.megaplier == arr[5])
                'hahaha'
              else
                ticket.megaplier
              end
            %>
        <td><%= @rss.summary  %>
      </tr>
      <%  end %>
    </table>
  </div>
</div>