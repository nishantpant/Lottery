<div style="padding: 20px 80px;">
  <h1>POOL : <%= h(@group.name)%></h1>   
  <div  class="column span-4 last">        
      <div class="tools">            
          <%= link_to 'Edit', edit_group_path(@group) %> &middot;
          <%= link_to 'Delete', @group, :confirm => 'Are you sure?',:method => :delete %> &middot;  
          <br><br><br>
      </div>

    <h4>Lottery Tickets</h4>
    <br>
    <div class="field">
      <table id="items" border="0">
        <tr>
          <th>Num 1
          <th>Num 2
          <th>Num 3
          <th>Num 4
          <th>Num 5
          <th>MegaPlier
          <th>Winner ?
        </tr>
        <% for ticket in @group.lotterytickets %>
        <tr>
          <td><%= ticket.num1 %>
          <td><%= ticket.num2 %>
          <td><%= ticket.num3 %>
          <td><%= ticket.num4 %>
          <td><%= ticket.num5 %>
          <td><%= ticket.megaplier %>
          <td><%= @rss.summary  %>
        </tr>
        <%  end %>
      </table>
    </div>

    <h4>Pool Members</h4>
    <br>
      <table id="items" border="0">
        <thead>
          <tr>
            <th class="ascending" data-sort="data-name">Name</th>
            <th data-sort="data-restaurant">Email</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for user in @users %>
          <tr class="sortable_row" data-restaurant="red-robin-gourmet-burgers" data-name="Crispy Chicken Tender Salad" data-calories="1450" data-fat="97" data-carbs="86">
              <td><%= link_to h("#{user.first_name} #{user.last_name}"), user %></td>
              <td><%= user.email %></td>
              <td>
                <%= link_to 'Show', user %>
                <%= link_to 'Edit', edit_user_path(user) %>
              </td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>


